
<mvc:view
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="de.nak.hausarbeit.controller.Main">

    <Page title="{i18n>Customers}" class="sapUiContentPadding">
        <content>
            <Table  id="customerTable"
                    items="{
                       path  : 'customer>/CustomerEntrySet'
                        }"
                    growing="true"
                    growingThreshold="50"
                    inset="false"
                    enableBusyIndicator="true">
                <headerToolbar>
                    <OverflowToolbar>
                        <content>
                            <ToolbarSpacer/>
                            <SearchField
                                    id="searchFieldName"
                                    width="20%"
                                    placeholder="{i18n>name}"
                                    search="onSearchName"
                                    selectOnFocus="false"/>

                            <Button
                                    id="sortButton"
                                    press="onSort"
                                    tooltip="Sort"
                                    icon="sap-icon://sort"/>

                            <Button id="addButton"
                                    icon="sap-icon://add"
                                    type="Transparent"
                                    press="onAdd"/>
                        </content>
                    </OverflowToolbar>
                </headerToolbar>

                <columns>
                    <Column >
                        <Text text="{i18n>customeridname}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>zip}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>city}" />
                    </Column>
                    <Column >
                        <Text text="{i18n>country}" />
                    </Column>
                </columns>

                <items>
                    <ColumnListItem type="Navigation" press="onPressListItem" >
                        <cells>
                             <ObjectIdentifier title="{customer>Kunnr}" text="{customer>Name1}" />
                            <Text text="{customer>Pstlz}"/>
                            <Text text="{customer>Ort01}" />
                            <Text text="{customer>Land1}" />
                        </cells>
                    </ColumnListItem>
                </items>

            </Table>
        </content>
    </Page>
</mvc:view>
