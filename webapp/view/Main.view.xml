
<mvc:view
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        xmlns:fb="sap.ui.comp.filterbar"
        controllerName="de.nak.hausarbeit.controller.Main">
    <Page title="Kunden" class="sapUiContentPadding">
        <content>
            <Table
                    id="CustomerTable"
                    items='customer>/CustomerEntrySet'
                    inset="false">
                <headerToolbar>

                    <OverflowToolbar>

                        <content>
                            <ToolbarSpacer/>
                            <SearchField
                                    id="searchFieldName"
                                    width="20%"
                                    placeholder="Name"
                                    search="onSearchName"
                                    selectOnFocus="false"/>
                            <Button
                                    id="sortButton"
                                    press="onSort"
                                    tooltip="Sort"
                                    icon="sap-icon://sort"/>

                            <Button id="addButton"
                                    icon="sap-icon://add"
                                    type="Transparent"
                                    press="onAdd"/>


                        </content>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="12em">
                        <Text text="Kundennummer / Name" />
                    </Column>
                    <Column width="5em">
                        <Text text="PLZ" />
                    </Column>
                    <Column width="8em">
                        <Text text="Wohnort" />
                    </Column>
                    <Column width="2em">
                        <Text text="Land" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Navigation" press="onListItemPress" >
                        <cells>
                            <ObjectIdentifier title="{customer>Kunnr}" text="{customer>Name1}" />
                            <ObjectNumber number="{customer>Pstlz}"/>
                            <ObjectAttribute text="{customer>Ort01}" />
                            <ObjectAttribute text="{customer>Land1}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:view>
