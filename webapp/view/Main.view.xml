<mvc:view
        xmlns:mvc="sap.ui.core.mvc"
        xmlns="sap.m"
        controllerName="de.nak.gbook.controller.Main">
    <Page title="{i18n>mainPageTitle}" class="sapUiContentPadding">
        <content>
            <List headerText="{i18n>listHeader}"
                  items="{ path: 'hotel>/GuestBookEntrySet'}"
                  growing="true"
                  growingThreshold="50"
                  enableBusyIndicator="true">

                <headerToolbar>
                    <Toolbar>
                        <Title text="{i18n>listHeader}" level="H2"/>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://add" press="onPressAdd"/>
                    </Toolbar>
                </headerToolbar>

                <StandardListItem title="{hotel>Name}"
                                  description="{hotel>Text}"
                                  press="onPressListItem"
                                  type="Navigation"
                />

            </List>
        </content>
    </Page>
</mvc:view>